.alert
  .alert__word
    チャットグループが作成されました。
.contents
  .left-contents
    .left-content__header
      .left-content__header__user-name
        = current_user.name
      = link_to "new_group_path", class: "left-content__header__new-group" do
        %i.fa.fa-pencil-square-o
      = link_to edit_user_path(current_user), class: "left-content__header__edit-user" do
        %i.fa.fa-cog
    .left-content__body
      .groups-list
        = render partial: "left_content_groups"
  .main-contents
    .main-content__header
      .main-content__header__group
        .main-content__header__group__name
          グループ名
        = link_to "Edit", "edit_group_path(@group)", class: "main-content__header__group__edit-btn"
        .main-content__header__group__member-list
          Member:
          %i グループメンバー
    .main-content__body
      .main-content__body__messages-list
        = render partial: "main_content_messages"
    .main-content__footer
      .main-content__footer-body
        %input{class: "main-content__footer-body__message", id: "message_body", placeholder: "type a message", type: "text", name: ""}
        %label{class: "main-content__footer-body__image-file", for: "message_image"}
          %input{class: "main-content__footer-body__image-file__image", type: "file", name: "message[image]", id: "message_image"}
          %i.fa.fa-image
      %input{type: "submit", class: "main-content__footer-body__submit", value: "Send", name: ""}
