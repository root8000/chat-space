.main-content__message{ "data-message-id": "#{message.id}" }
  .main-content__message__user-name
    = message.user.name
  .main-content__message__time
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main-content__message__body
    = message.content if message.content.present?
    = image_tag message.image.url if message.image.present?
